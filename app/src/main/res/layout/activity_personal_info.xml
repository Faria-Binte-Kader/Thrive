<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/light_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".PersonalInfo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:elevation="10dp"
            android:src="@drawable/logo2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ENTER YOUR INFO TO THRIVE!"
            android:textStyle="bold"
            android:background="@drawable/buttonrounded3"
            android:textAlignment="center"
            android:fontFamily="@font/averiasanslibre_bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:padding="10dp"
            />

        <EditText
            android:id="@+id/personalInfoName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="ENTER YOUR NAME"
            android:textColorHint="@color/purple_grey"
            android:textAlignment="center"
            android:padding="10dp"
            android:paddingLeft="15dp"
            android:inputType="textCapCharacters"
            android:background="@drawable/buttonrounded4"
            android:textSize="18sp"
            android:layout_marginTop="40dp"
            android:foregroundTint="@color/purple_500"
            android:elevation="5dp"
            android:fontFamily="@font/averiasanslibre_light"
            />

        <EditText

            android:id="@+id/personalInfoAge"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="ENTER YOUR AGE"
            android:textAlignment="center"
            android:background="@drawable/buttonrounded4"
            android:textColorHint="@color/purple_grey"
            android:padding="10dp"
            android:paddingLeft="15dp"
            android:fontFamily="@font/averiasanslibre_light"
            android:inputType="number"
            android:elevation="5dp"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:foregroundTint="@color/purple_500"
            />

        <EditText

            android:id="@+id/personalInfoWeight"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="ENTER YOUR WEIGHT"
            android:textAlignment="center"
            android:background="@drawable/buttonrounded4"
            android:textColorHint="@color/purple_grey"
            android:padding="10dp"
            android:paddingLeft="15dp"
            android:fontFamily="@font/averiasanslibre_light"
            android:inputType="number"
            android:elevation="5dp"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:foregroundTint="@color/purple_500"
            />

        <EditText
            android:id="@+id/personalInfoDescription"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="ENTER DESCRIPTION"
            android:textAlignment="center"
            android:background="@drawable/buttonrounded4"
            android:textColorHint="@color/purple_grey"
            android:padding="10dp"
            android:paddingLeft="15dp"
            android:fontFamily="@font/averiasanslibre_light"
            android:inputType="text"
            android:elevation="5dp"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:foregroundTint="@color/purple_500"
            />

        <Button
            android:layout_marginTop="40dp"
            android:id="@+id/saveInfoButton"
            android:layout_width="162dp"
            android:layout_height="53dp"
            android:background="@drawable/buttonrounded"
            android:fontFamily="@font/averiasanslibre_bold"
            android:text="SAVE"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:elevation="10dp"
            app:backgroundTint="@null"
            />
    </LinearLayout>

</LinearLayout>