<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_bg"
    android:padding="30dp"
    tools:context=".login">

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            android:elevation="10dp"/>

        <EditText
            android:id="@+id/loginEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="Email"
            android:textColorHint="@color/purple_grey"
            android:padding="10dp"
            android:paddingLeft="15dp"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            android:foregroundTint="@color/purple_700"
            android:fontFamily="@font/roboto_regular"
            />

        <EditText
            android:background="@color/white"
            android:id="@+id/loginPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="@color/purple_grey"
            android:padding="10dp"
            android:paddingLeft="15dp"
            android:fontFamily="@font/roboto_regular"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:foregroundTint="@color/purple_grey"
            />

        <Button
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_marginTop="20dp"
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonroundednew"
            android:fontFamily="@font/roboto_bold"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/purple_grey"
            android:textSize="20dp"
            android:elevation="10dp"
            app:backgroundTint="@null"
            />
        <Button
            android:id="@+id/gotoSignupButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New here? Sign up!"
            android:textColor="@color/purple_grey"
            android:background="@android:color/transparent"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginTop="10sp"
            android:padding="10sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|right">

        <Button
            android:id="@+id/forgotPassword"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roboto_bold"
            android:padding="10sp"
            android:text="Forgot Password"
            android:textColor="@color/purple_grey"
            android:textStyle="bold" />
    </LinearLayout>`

</LinearLayout>