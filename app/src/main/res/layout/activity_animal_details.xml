<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:background="@drawable/light_bg"
    tools:context=".AnimalDetails">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_gravity="right"

        >

        <TextView
            android:id="@+id/cointextview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginRight="6dp"
            android:fontFamily="@font/averiasanslibre_light"
            android:layout_toLeftOf="@+id/coinpicture2"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/coinpicture2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:backgroundTint="@null"
            android:elevation="15dp"
            android:background="@drawable/money"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/iamanimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I'm an Animal"
        android:textStyle="bold"
        android:background="@drawable/buttonrounded3"
        android:textAlignment="center"
        android:fontFamily="@font/averiasanslibre_bold"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:padding="10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
    <ImageView
        android:id="@+id/animalbigpic"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:background="@drawable/buttonrounded4"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:src="@drawable/default_profile_picture"
        />
        <TextView
            android:id="@+id/animaltype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/averiasanslibre_light"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/animalbigpic"
            android:layout_marginRight="70dp"
            android:text="Normal"
            android:background="@drawable/buttonrounded5"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_alignEnd="@id/animalbigpic"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/animaldetails"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/averiasanslibre_light"
        android:text="Details"
        android:background="@drawable/buttonrounded5"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:padding="10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/buybg"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonrounded4"
            android:layout_centerInParent="true"
            />
        <Button
            android:id="@+id/buyanimal"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:background="@drawable/buttonrounded5"
            app:backgroundTint="@null"
           android:text="BUY"
            android:fontFamily="@font/averiasanslibre_bold"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            />

        <Button
            android:id="@+id/coinbtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/buyanimal"
            android:layout_marginLeft="-46dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="110dp"
            android:background="@drawable/money"
            android:elevation="20dp"
            app:backgroundTint="@null" />
        <TextView
            android:layout_alignLeft="@+id/coinbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="-46dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"
            android:fontFamily="@font/averiasanslibre_light"
            android:text="0"
            android:id="@+id/buyanimalprice"
            android:textColor="@color/purple_500"
            android:textSize="25dp" />
    </RelativeLayout>

</LinearLayout>