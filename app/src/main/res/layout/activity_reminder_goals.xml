<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/light_bg"
    tools:context=".ReminderGoals"
   >

<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginBottom="100dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SET REMINDER FOR GOALS TO STAY ON TRACK"
        android:textStyle="bold"
        android:background="@drawable/buttonrounded3"
        android:textAlignment="center"
        android:fontFamily="@font/averiasanslibre_bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/remindername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ENTER YOUR GOAL NAME"
        android:textColorHint="@color/purple_grey"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:paddingLeft="15dp"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/averiasanslibre_light"
        android:background="@drawable/buttonrounded4"
        android:textSize="18sp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REPEAT ON"
        android:textStyle="bold"
        android:background="@drawable/buttonrounded3"
        android:textAlignment="center"
        android:fontFamily="@font/averiasanslibre_bold"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:padding="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
       android:gravity="center"
        android:layout_marginTop="10dp">
        <Button
            android:layout_margin="8dp"
            android:id="@+id/satbtn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonroundeddark"
            android:fontFamily="@font/averiasanslibre_bold"
            android:text="sat"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:elevation="10dp"
            app:backgroundTint="@null"
            />
        <Button
            android:layout_margin="8dp"
            android:id="@+id/sunbtn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonroundeddark"
            android:fontFamily="@font/averiasanslibre_bold"
            android:text="sun"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:elevation="10dp"
            app:backgroundTint="@null"
            />
        <Button
            android:layout_margin="8dp"
            android:id="@+id/monbtn"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonroundeddark"
            android:fontFamily="@font/averiasanslibre_bold"
            android:text="mon"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:elevation="10dp"
            app:backgroundTint="@null"
            />
        <Button
            android:layout_margin="8dp"
            android:id="@+id/tuesbtn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonroundeddark"
            android:fontFamily="@font/averiasanslibre_bold"
            android:text="tue"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:elevation="10dp"
            app:backgroundTint="@null"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        >
        <Button
            android:layout_margin="8dp"
            android:id="@+id/wedbtn"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonroundeddark"
            android:fontFamily="@font/averiasanslibre_bold"
            android:text="wed"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:elevation="10dp"
            app:backgroundTint="@null"
            />
        <Button
            android:layout_margin="8dp"
            android:id="@+id/thursbtn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonroundeddark"
            android:fontFamily="@font/averiasanslibre_bold"
            android:text="thurs"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:elevation="10dp"
            app:backgroundTint="@null"
            />
        <Button
            android:layout_margin="8dp"
            android:id="@+id/fribtn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonroundeddark"
            android:fontFamily="@font/averiasanslibre_bold"
            android:text="fri"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:elevation="10dp"
            app:backgroundTint="@null"
            />

    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER TIME FOR REMINDER"
        android:textStyle="bold"
        android:background="@drawable/buttonrounded3"
        android:textAlignment="center"
        android:fontFamily="@font/averiasanslibre_bold"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:padding="10dp"
        />

    <com.google.android.flexbox.FlexboxLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:flexWrap="wrap"
        app:alignItems="stretch"
        app:alignContent="stretch"
        android:id="@+id/remindergoalslayout"
        android:layout_gravity="center"
       />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:layout_margin="8dp"
        android:id="@+id/addbtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonrounded5"
        android:fontFamily="@font/averiasanslibre_bold"
        android:text="+"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:elevation="10dp"
        app:backgroundTint="@null"
        />
        <Button
            android:layout_margin="8dp"
            android:id="@+id/removebtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonrounded5"
            android:fontFamily="@font/averiasanslibre_bold"
            android:text="-"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:elevation="10dp"
            app:backgroundTint="@null"
            />
    </LinearLayout>
    <Button
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:id="@+id/setreminderbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonroundeddark"
        android:fontFamily="@font/averiasanslibre_bold"
        android:text="SET REMINDER!"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:elevation="10dp"
        app:backgroundTint="@null"
        />
</LinearLayout>
</ScrollView>