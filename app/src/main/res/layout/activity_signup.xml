<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/light_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".Signup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:elevation="10dp"
            android:src="@drawable/logo2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ENTER YOUR INFO TO THRIVE!"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            android:padding="10dp"

            />


        <EditText
            android:id="@+id/signupName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="ENTER YOUR NAME"
            android:textColorHint="@color/purple_grey"
            android:textAlignment="center"
            android:padding="10dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="40dp"
            android:inputType="textCapCharacters"
            android:background="@color/white"
            android:textSize="18sp"
            android:foregroundTint="@color/purple_500"
            android:fontFamily="@font/roboto_regular"
            />


        <EditText

            android:id="@+id/signupEmail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="ENTER YOUR EMAIL ADDRESS"
            android:textAlignment="center"
            android:textColorHint="@color/purple_grey"
            android:padding="10dp"
            android:paddingLeft="15dp"
            android:fontFamily="@font/roboto_regular"
            android:background="@color/white"
            android:inputType="textEmailAddress"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:foregroundTint="@color/purple_500"
            />

        <EditText

            android:id="@+id/signupPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="ENTER YOUR PASSWORD"
            android:textAlignment="center"
            android:textColorHint="@color/purple_grey"
            android:padding="10dp"
            android:paddingLeft="15dp"
            android:fontFamily="@font/roboto_regular"
            android:background="@color/white"
            android:inputType="textPassword"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:foregroundTint="@color/purple_500"
            />

        <EditText

            android:id="@+id/signupConfirmPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="CONFIRM YOUR PASSWORD"
            android:textAlignment="center"
            android:textColorHint="@color/purple_grey"
            android:padding="10dp"
            android:paddingLeft="15dp"
            android:fontFamily="@font/roboto_regular"
            android:background="@color/white"
            android:inputType="textPassword"

            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:foregroundTint="@color/purple_500"
            />


        <EditText

            android:id="@+id/signupAge"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="ENTER YOUR AGE"
            android:textAlignment="center"
            android:textColorHint="@color/purple_grey"
            android:padding="10dp"
            android:paddingLeft="15dp"
            android:fontFamily="@font/roboto_regular"
            android:background="@color/white"
            android:inputType="number"

            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:foregroundTint="@color/purple_500"
            />

        <EditText

            android:id="@+id/signupHeight"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="ENTER YOUR HEIGHT IN CM"
            android:textAlignment="center"
            android:textColorHint="@color/purple_grey"
            android:padding="10dp"
            android:paddingLeft="15dp"
            android:fontFamily="@font/roboto_regular"
            android:background="@color/white"
            android:inputType="number"

            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:foregroundTint="@color/purple_500"
            />

        <EditText

            android:id="@+id/signupWeight"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="ENTER YOUR WEIGHT IN KG"
            android:textAlignment="center"
            android:textColorHint="@color/purple_grey"
            android:padding="10dp"
            android:paddingLeft="15dp"
            android:fontFamily="@font/roboto_regular"
            android:background="@color/white"
            android:inputType="number"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:foregroundTint="@color/purple_500"
            />

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/signupButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonroundednew"
            android:fontFamily="@font/averiasanslibre_bold"
            android:text="SIGN UP"
            android:textAllCaps="false"
            android:textColor="@color/purple_700"
            android:textSize="24dp"
            android:elevation="10dp"
            app:backgroundTint="@null"
            />
        <Button
            android:id="@+id/alreadyMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already a member? LOGIN!"
            android:textColor="@color/grey"
            android:background="@android:color/transparent"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="10sp"
            android:padding="10sp"
            android:onClick="gotoLoginPage"
            />
    </LinearLayout>

</ScrollView>