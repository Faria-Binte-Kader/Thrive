<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/light_bg"
    tools:context=".AddGoalsHealth">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right">
        <Button
            android:id="@+id/reminderbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:backgroundTint="@null"
            android:elevation="20dp"
            android:background="@drawable/reminderbutton"
            android:layout_marginRight="15dp"
         android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/addfriendsbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:backgroundTint="@null"
            android:elevation="20dp"
            android:background="@drawable/addfriendsbutton"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:layout_margin="10dp"
        android:id="@+id/switchgoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="H"
        android:textOn="P"
        app:showText="true"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        android:textSize="20dp"
        android:fontFamily="@font/averiasanslibre_light"
        android:thumb="@drawable/switch_thumb"
        app:track="@drawable/switch_track"
        />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENTER DETAILS OF YOUR GOAL"
        android:textStyle="bold"
        android:background="@drawable/buttonrounded3"
        android:textAlignment="center"
        android:fontFamily="@font/averiasanslibre_bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="10dp"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE ANY CATEGORY FROM BELOW"
        android:textStyle="bold"
        android:background="@drawable/buttonrounded3"
        android:textAlignment="center"
        android:fontFamily="@font/averiasanslibre_bold"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:padding="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/waterintakebtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/buttonroundeddark"
            android:fontFamily="@font/averiasanslibre_bold"
            android:text="Water Intake"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:elevation="10dp"
            app:backgroundTint="@null"
            android:layout_margin="8dp"
            />
        <Button
            android:layout_margin="8dp"
            android:id="@+id/medintakebtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/buttonroundeddark"
            android:fontFamily="@font/averiasanslibre_bold"
            android:text="Medicine Intake"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:elevation="10dp"
            app:backgroundTint="@null"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       android:paddingLeft="10dp">
        <Button
            android:layout_margin="8dp"
            android:id="@+id/workout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/buttonroundeddark"
            android:fontFamily="@font/averiasanslibre_bold"
            android:text="Working out"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:elevation="10dp"
            app:backgroundTint="@null"
            />
        <Button
            android:layout_margin="8dp"
            android:id="@+id/foodhabitbtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/buttonroundeddark"
            android:fontFamily="@font/averiasanslibre_bold"
            android:text="Food Habits"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:elevation="10dp"
            app:backgroundTint="@null"
            />
        <Button
            android:layout_margin="8dp"
            android:id="@+id/yogabtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/buttonroundeddark"
            android:fontFamily="@font/averiasanslibre_bold"
            android:text="Yoga"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:elevation="10dp"
            app:backgroundTint="@null"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <Button
            android:layout_margin="8dp"
            android:id="@+id/sportsbtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/buttonroundeddark"
            android:fontFamily="@font/averiasanslibre_bold"
            android:text="Sports"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:elevation="10dp"
            app:backgroundTint="@null"
            />
        <Button
            android:layout_margin="8dp"
            android:id="@+id/sleepbtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/buttonroundeddark"
            android:fontFamily="@font/averiasanslibre_bold"
            android:text="Sleep"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:elevation="10dp"
            app:backgroundTint="@null"
            />
        <Button
            android:layout_margin="8dp"
            android:id="@+id/bodycarebtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/buttonroundeddark"
            android:fontFamily="@font/averiasanslibre_bold"
            android:text="Body care"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:elevation="10dp"
            app:backgroundTint="@null"
            />

    </LinearLayout>
    <Button
       android:layout_gravity="left"
        android:layout_marginLeft="15dp"
       android:layout_marginTop="10dp"
        android:id="@+id/rehabilitationbtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/buttonroundeddark"
        android:fontFamily="@font/averiasanslibre_bold"
        android:text="Rehabilitation"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:elevation="10dp"
        app:backgroundTint="@null"
        />
    <EditText
        android:id="@+id/goalName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ENTER YOUR GOAL NAME"
        android:textColorHint="@color/purple_grey"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:paddingLeft="15dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/buttonrounded4"
        android:textSize="20sp"
        android:foregroundTint="@color/purple_grey"
        android:elevation="5dp"
        android:fontFamily="@font/averiasanslibre_light"
        />
    <EditText
        android:id="@+id/goalDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ENTER DURATION IN DAYS"
        android:textColorHint="@color/purple_grey"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:paddingLeft="15dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/buttonrounded4"
        android:textSize="20sp"
        android:foregroundTint="@color/purple_grey"
        android:elevation="5dp"
        android:fontFamily="@font/averiasanslibre_light"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DO YOU WANT TO MAKE YOUR GOAL PUBLIC?"
        android:textStyle="bold"
        android:background="@drawable/buttonrounded3"
        android:textAlignment="center"
        android:fontFamily="@font/averiasanslibre_bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="10dp"
        />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >

        <Button
            android:id="@+id/publicbtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/buttonroundeddark"
            android:fontFamily="@font/averiasanslibre_bold"
            android:text="Go Public!"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:elevation="10dp"
            app:backgroundTint="@null"
            android:layout_margin="8dp"
            />
        <Button
            android:layout_margin="8dp"
            android:id="@+id/laterbtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/buttonroundeddark"
            android:fontFamily="@font/averiasanslibre_bold"
            android:text="Maybe Later."
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:elevation="10dp"
            app:backgroundTint="@null"
            />
    </LinearLayout>

    <Button
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:id="@+id/setgoalbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonroundeddark"
        android:fontFamily="@font/averiasanslibre_bold"
        android:text="SET GOAL!"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:elevation="10dp"
        app:backgroundTint="@null"
        />
</LinearLayout>
</ScrollView>